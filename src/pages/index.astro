<style>
  nav {
    display: flex;
    gap: 1rem;
  }
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  section {
    margin-bottom: 6rem;
  }
  .back-to-top {
    display: none;
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background-color: #000;
    color: #fff !important; /* Override the default anchor color */
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none !important; /* Override the hover effect */
    opacity: 0.7;
    transition: opacity 0.3s;
  }

  .back-to-top:hover {
    opacity: 1;
  }
</style>

<script>
  const backToTop = document.querySelector(".back-to-top");
  if (backToTop) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 200) {
        (backToTop as HTMLElement).style.display = "flex";
      } else {
        (backToTop as HTMLElement).style.display = "none";
      }
    });
  }
</script>
